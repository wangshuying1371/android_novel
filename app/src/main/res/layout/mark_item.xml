<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mymarkback" >

    <ImageView
        android:id="@+id/markImage1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/mark_number" >
    </ImageView>

    <TextView
        android:id="@+id/markText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/markImage1"
        android:lines="1"
        android:text=""
        android:textColor="#000000" >
    </TextView>

    <TextView
        android:id="@+id/markText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@id/markImage1"
        android:text="" >
    </TextView>

    <ImageView
        android:id="@+id/markImage2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:src="@drawable/dustbin2"/>

</RelativeLayout>