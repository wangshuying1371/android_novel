<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="xd.wsy.activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.2"
        />

    <RelativeLayout
        android:id="@+id/rl_registerName"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text="*用户名:"
            />
        <EditText
            android:id="@+id/et_registerName"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/white_shape"
            android:alpha="0.8"
            android:ems="10"
            android:inputType="textPersonName"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_registerPhone"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/rl_registerName"
        >
        <TextView
            android:id="@+id/tv_registerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text="*手机号:"
            />
        <EditText
            android:id="@+id/et_registerPhone"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:alpha="0.8"
            android:layout_centerVertical="true"
            android:background="@drawable/white_shape"
            android:ems="10"
            android:inputType="textPersonName"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_registerEmail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/rl_registerPhone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text=" *邮  箱: "
            />
        <EditText
            android:id="@+id/et_registerEmail"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:alpha="0.8"
            android:layout_centerVertical="true"
            android:background="@drawable/white_shape"
            android:ems="10"
            android:inputType="textPersonName"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_registerPassword"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/rl_registerEmail"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text=" *密  码:" />

        <EditText
            android:id="@+id/et_registerPassword"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:alpha="0.8"
            android:layout_centerVertical="true"
            android:background="@drawable/white_shape"
            android:ems="10"
            android:inputType="numberPassword" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_registerConfirm"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/rl_registerPassword"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text="*确认密码:" />

        <EditText
            android:id="@+id/et_registerConfirm"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:alpha="0.8"
            android:layout_centerVertical="true"
            android:background="@drawable/white_shape"
            android:ems="10"
            android:inputType="numberPassword" />
    </RelativeLayout>

    <Button
        android:id="@+id/tv_register"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:textColor="#fff"
        android:background="#00BCD4"
        android:text="注     册" />

</RelativeLayout>
