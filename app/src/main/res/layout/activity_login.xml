<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    tools:context=".activity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="逸  读"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#12183C"
        />

    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_shape"
        android:layout_centerInParent="true"
        android:alpha="0.2"
        />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:layout_centerInParent="true"
        android:alpha="0.2"
        />

    <RelativeLayout
        android:id="@+id/rl_loginPhone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_phone"
            />
        <EditText
            android:id="@+id/et_loginPhone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:textColor="#fff"
            android:textSize="14sp"
            android:hint="请输入手机号"
            />
        <View
            android:layout_width="300dp"
            android:layout_height="2px"
            android:background="#fff"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/et_loginPhone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_loginPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_loginPhone"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_password"
            />
        <EditText
            android:id="@+id/et_loginPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@null"
            android:inputType="numberPassword"
            android:hint="请输入密码"
            />
        <View
            android:layout_width="300dp"
            android:layout_height="2px"
            android:background="#fff"
            android:layout_below="@+id/et_loginPassword"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_loginBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_loginPassword"
        >
        <CheckBox
            android:id="@+id/cb_rememberPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:text="记住密码"
            android:textColor="#fff"
            />
        <CheckBox
            android:id="@+id/cb_autoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:text="自动登录"
            android:textColor="#fff"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="登    录"
        android:background="@drawable/white_shape"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_loginBox"
        />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="注    册"
        android:background="@drawable/white_shape"
        android:textColor="#000"
        android:textSize="18sp"
        android:alpha="0.3"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_login"
        />


</RelativeLayout>