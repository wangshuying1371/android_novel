<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/pop_password"
    >


    <RelativeLayout
        android:id="@+id/rl_oldPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="#fff"
            android:text="*请输入旧密码:"
            />
        <EditText
            android:id="@+id/et_oldPassword"
            android:layout_width="210dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/white_shape"
            android:alpha="0.8"
            android:ems="10"
            android:inputType="numberPassword"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_newPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/rl_oldPassword"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="#fff"
            android:text="*请输入新密码:"
            />
        <EditText
            android:id="@+id/et_newPassword"
            android:layout_width="210dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/white_shape"
            android:alpha="0.8"
            android:ems="10"
            android:inputType="numberPassword"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirmUpdate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_newPassword"
        android:layout_marginTop="30dp"
        android:background="#658EAD"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="#fff"
        android:text="确认修改"
        />


</RelativeLayout>